{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://archon72.com/schemas/motion.v1.json",
  "title": "Legislative Motion",
  "description": "A declaration of intent from the Legislative Branch. Motions define WHAT the system proposes to do, never HOW. Kings are domain-limited to their Realm.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "motion_id",
    "version",
    "title",
    "motion_type",
    "realm_assignment",
    "normative_intent",
    "constraints",
    "success_criteria",
    "submitted_at",
    "status"
  ],
  "properties": {
    "motion_id": {
      "type": "string",
      "description": "Unique identifier for this motion (UUID).",
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$"
    },
    "version": {
      "type": "string",
      "const": "1.0.0"
    },
    "title": {
      "type": "string",
      "description": "Clear, descriptive name for the motion.",
      "minLength": 10,
      "maxLength": 200
    },
    "motion_type": {
      "type": "string",
      "enum": ["policy", "constitutional", "procedural", "ethical", "epistemic"],
      "description": "Type determines voting threshold and advisory requirements."
    },
    "realm_assignment": {
      "type": "object",
      "description": "Realm sponsorship for this motion.",
      "additionalProperties": false,
      "required": ["primary_realm", "primary_sponsor", "cross_realm"],
      "properties": {
        "primary_realm": {
          "$ref": "#/$defs/realm"
        },
        "primary_sponsor": {
          "$ref": "#/$defs/king_reference"
        },
        "cross_realm": {
          "type": "boolean",
          "description": "True if motion affects multiple Realms."
        },
        "co_sponsors": {
          "type": "array",
          "description": "Required if cross_realm is true. Each affected Realm must be represented.",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["realm", "sponsor", "domain_constraints"],
            "properties": {
              "realm": {
                "$ref": "#/$defs/realm"
              },
              "sponsor": {
                "$ref": "#/$defs/king_reference"
              },
              "domain_constraints": {
                "type": "array",
                "description": "Constraints this King adds from their domain.",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "normative_intent": {
      "type": "string",
      "description": "WHAT the system proposes to do. Must not include HOW.",
      "minLength": 50,
      "maxLength": 5000
    },
    "constraints": {
      "type": "array",
      "description": "What must NOT be violated. These are boundaries, not methods.",
      "minItems": 1,
      "items": {
        "type": "string",
        "maxLength": 500
      }
    },
    "success_criteria": {
      "type": "array",
      "description": "Observable, non-procedural outcomes. Must not specify HOW to achieve.",
      "minItems": 1,
      "items": {
        "type": "string",
        "maxLength": 500
      }
    },
    "what_this_motion_does_not_cover": {
      "type": "array",
      "description": "Explicit scoping of what is outside this motion's intent.",
      "items": {
        "type": "string"
      }
    },
    "advisory_required": {
      "type": "boolean",
      "description": "Whether Marquis advisory window is required."
    },
    "advisory_window": {
      "type": "object",
      "description": "Advisory window details if required.",
      "additionalProperties": false,
      "properties": {
        "duration": {
          "type": "string",
          "description": "ISO-8601 duration. Constitutional: PT72H, Ethical/Epistemic: PT48H"
        },
        "opens_at": {
          "type": "string",
          "format": "date-time"
        },
        "closes_at": {
          "type": "string",
          "format": "date-time"
        },
        "advisory_received": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "marquis_id": { "type": "string" },
              "advisory_id": { "type": "string" },
              "received_at": {
                "type": "string",
                "format": "date-time"
              }
            }
          }
        },
        "acknowledgment": {
          "type": "object",
          "description": "Sponsor acknowledgment of advisory input.",
          "properties": {
            "acknowledged": { "type": "boolean" },
            "acknowledged_at": {
              "type": "string",
              "format": "date-time"
            },
            "response": {
              "type": "string",
              "enum": ["accepted", "rejected_with_rationale", "partially_accepted"]
            },
            "rationale": {
              "type": "string",
              "maxLength": 2000
            }
          }
        }
      }
    },
    "submitted_at": {
      "type": "string",
      "format": "date-time"
    },
    "status": {
      "type": "string",
      "enum": [
        "draft",
        "submitted",
        "admission_review",
        "admitted",
        "rejected_invalid",
        "advisory_window",
        "pending_deliberation",
        "deliberating",
        "voting",
        "ratified",
        "rejected",
        "deferred",
        "withdrawn"
      ]
    },
    "admission": {
      "type": "object",
      "description": "Result of Motion Admission Gate review.",
      "additionalProperties": false,
      "properties": {
        "admitted": {
          "type": "boolean"
        },
        "reviewed_at": {
          "type": "string",
          "format": "date-time"
        },
        "rejection_reason": {
          "type": "string",
          "enum": [
            "realm_mismatch",
            "how_smuggling",
            "missing_co_sponsor",
            "duplicate_motion",
            "malformed",
            "unauthorized_sponsor"
          ]
        },
        "validation_checks": {
          "type": "object",
          "properties": {
            "realm_valid": { "type": "boolean" },
            "how_free": { "type": "boolean" },
            "cross_realm_sponsors_complete": { "type": "boolean" },
            "not_duplicate": { "type": "boolean" }
          }
        }
      }
    },
    "deliberation": {
      "type": "object",
      "description": "Record of deliberation.",
      "additionalProperties": false,
      "properties": {
        "scheduled_for_conclave": {
          "type": "string"
        },
        "agenda_band": {
          "type": "integer",
          "minimum": 0,
          "maximum": 4
        },
        "deferral_count": {
          "type": "integer",
          "minimum": 0
        },
        "deliberation_summary": {
          "type": "string",
          "maxLength": 5000
        }
      }
    },
    "voting": {
      "type": "object",
      "description": "Voting record.",
      "additionalProperties": false,
      "properties": {
        "threshold_required": {
          "type": "string",
          "enum": ["simple_majority", "supermajority"]
        },
        "votes_for": {
          "type": "integer",
          "minimum": 0
        },
        "votes_against": {
          "type": "integer",
          "minimum": 0
        },
        "abstentions": {
          "type": "integer",
          "minimum": 0
        },
        "threshold_met": {
          "type": "boolean"
        },
        "voted_at": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "ratification": {
      "type": "object",
      "description": "Ratification record if motion passed.",
      "additionalProperties": false,
      "properties": {
        "ratified": {
          "type": "boolean"
        },
        "ratified_at": {
          "type": "string",
          "format": "date-time"
        },
        "effective_at": {
          "type": "string",
          "format": "date-time"
        },
        "transferred_to_executive": {
          "type": "boolean"
        },
        "execution_plan_id": {
          "type": "string",
          "description": "Reference to Executive branch execution plan."
        }
      }
    },
    "lineage": {
      "type": "object",
      "description": "Motion history for detecting perpetual motion patterns.",
      "additionalProperties": false,
      "properties": {
        "predecessor_motion_id": {
          "type": "string",
          "description": "If this motion is derived from a previous motion."
        },
        "material_changes_from_predecessor": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "resubmission_count": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "constraints_metadata": {
      "type": "object",
      "description": "Constitutional constraints on motions.",
      "additionalProperties": false,
      "properties": {
        "must_be_realm_valid": {
          "type": "boolean",
          "const": true
        },
        "must_be_how_free": {
          "type": "boolean",
          "const": true
        },
        "must_be_explicitly_scoped": {
          "type": "boolean",
          "const": true
        },
        "king_authority_ends_at_ratification": {
          "type": "boolean",
          "const": true
        },
        "no_special_voting_weight": {
          "type": "boolean",
          "const": true
        }
      }
    },
    "audit": {
      "type": "object",
      "additionalProperties": false,
      "required": ["created_at", "trace_id"],
      "properties": {
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        },
        "trace_id": {
          "type": "string"
        }
      }
    }
  },
  "$defs": {
    "realm": {
      "type": "string",
      "enum": [
        "boundary_concealment",
        "knowledge_formation",
        "social_bonds_covenant",
        "institutions_power",
        "truth_claims_counsel",
        "prediction_uncertainty",
        "threat_anomaly",
        "transformation_adaptation",
        "virtue_method"
      ],
      "description": "The nine Legislative Realms."
    },
    "king_reference": {
      "type": "object",
      "additionalProperties": false,
      "required": ["king_id", "king_name"],
      "properties": {
        "king_id": {
          "type": "string"
        },
        "king_name": {
          "type": "string",
          "enum": ["Bael", "Paimon", "Beleth", "Belial", "Balam", "Purson", "Vine", "Zagan", "Asmoday"]
        }
      }
    }
  }
}
