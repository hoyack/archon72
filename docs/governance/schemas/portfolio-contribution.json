{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PortfolioContribution",
  "type": "object",
  "required": [
    "cycle_id",
    "motion_id",
    "portfolio_id",
    "president_id",
    "president_name",
    "tasks",
    "capacity_claim",
    "blockers"
  ],
  "properties": {
    "cycle_id": { "type": "string" },
    "motion_id": { "type": "string" },
    "portfolio_id": { "type": "string" },
    "president_id": { "type": "string" },
    "president_name": { "type": "string" },
    "tasks": { "type": "array", "items": { "type": "object" }, "minItems": 1 },
    "capacity_claim": {
      "type": "object",
      "required": ["claim_type"],
      "properties": {
        "claim_type": { "type": "string", "enum": ["COARSE_ESTIMATE"] },
        "units": { "type": "number" },
        "unit_label": { "type": "string" }
      }
    },
    "blockers": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["severity", "description", "requires_escalation"],
        "properties": {
          "severity": {
            "type": "string",
            "enum": ["LOW", "MEDIUM", "HIGH", "CRITICAL"]
          },
          "description": { "type": "string" },
          "requires_escalation": { "type": "boolean" }
        }
      }
    }
  }
}

