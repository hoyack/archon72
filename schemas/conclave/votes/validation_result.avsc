{
  "type": "record",
  "name": "ValidationResult",
  "namespace": "archon72.conclave.votes",
  "doc": "Result from a single validator LLM. Two of these (one per validator) needed for consensus.",
  "fields": [
    {
      "name": "vote_id",
      "type": "string",
      "doc": "Vote being validated (UUID)"
    },
    {
      "name": "session_id",
      "type": "string",
      "doc": "Conclave session identifier (UUID)"
    },
    {
      "name": "validator_id",
      "type": "string",
      "doc": "Archon ID of the validator (Furcas or Orias)"
    },
    {
      "name": "validated_choice",
      "type": "string",
      "doc": "Choice determined by this validator"
    },
    {
      "name": "confidence",
      "type": "double",
      "doc": "Optional confidence score from validator (0.0-1.0)"
    },
    {
      "name": "attempt",
      "type": "int",
      "doc": "Validation attempt number (1-based, max 3 per ADR-005)"
    },
    {
      "name": "timestamp_ms",
      "type": {
        "type": "long",
        "logicalType": "timestamp-millis"
      },
      "doc": "When this validation was completed"
    }
  ]
}
