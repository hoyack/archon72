{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://archon72.local/schemas/contracts/administrative_handoff.schema.json",
  "title": "AdministrativeHandoff",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "handoff_id", "created_at", "references", "work_package", "portfolio_context", "admin_directives"],
  "properties": {
    "schema_version": { "type": "string", "const": "1.0" },
    "handoff_id": { "type": "string", "pattern": "^handoff-[a-zA-Z0-9\\-]+$" },
    "created_at": { "type": "string", "format": "date-time" },

    "references": {
      "type": "object",
      "additionalProperties": false,
      "required": ["session_id", "mandate_id", "motion_id", "rfp_id", "award_id", "selected_duke_id", "selected_proposal_id"],
      "properties": {
        "session_id": { "type": "string", "minLength": 1 },
        "mandate_id": { "type": "string", "pattern": "^mandate-[a-zA-Z0-9\\-]+$" },
        "motion_id": { "type": "string", "pattern": "^motion-[a-zA-Z0-9\\-]+$" },
        "rfp_id": { "type": "string", "pattern": "^rfp-[a-zA-Z0-9\\-]+$" },
        "award_id": { "type": "string", "pattern": "^award-[a-zA-Z0-9\\-]+$" },
        "selected_duke_id": { "type": "string", "minLength": 1 },
        "selected_proposal_id": { "type": "string", "pattern": "^proposal-[a-zA-Z0-9\\-]+$" }
      }
    },

    "work_package": {
      "type": "object",
      "additionalProperties": false,
      "required": ["title", "summary", "deliverables", "constraints"],
      "properties": {
        "title": { "type": "string", "minLength": 1 },
        "summary": { "type": "string", "minLength": 1 },
        "deliverables": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["id", "title", "acceptance_criteria"],
            "properties": {
              "id": { "type": "string", "minLength": 1 },
              "title": { "type": "string", "minLength": 1 },
              "acceptance_criteria": { "type": "array", "minItems": 1, "items": { "type": "string", "minLength": 1 } }
            }
          }
        },
        "constraints": {
          "type": "object",
          "additionalProperties": false,
          "required": ["deadline_iso", "budget_cap", "explicit_exclusions"],
          "properties": {
            "deadline_iso": { "type": "string", "minLength": 1 },
            "budget_cap": {
              "type": "object",
              "additionalProperties": false,
              "required": ["amount", "currency"],
              "properties": {
                "amount": { "type": "number", "minimum": 0 },
                "currency": { "type": "string", "minLength": 3, "maxLength": 3 }
              }
            },
            "explicit_exclusions": { "type": "array", "items": { "type": "string" } }
          }
        }
      }
    },

    "portfolio_context": {
      "type": "object",
      "additionalProperties": false,
      "required": ["portfolios", "portfolios_involved_count"],
      "properties": {
        "portfolios": { "type": "array", "minItems": 1, "items": { "type": "string", "minLength": 1 } },
        "portfolios_involved_count": { "type": "integer", "minimum": 1 }
      }
    },

    "admin_directives": {
      "type": "object",
      "additionalProperties": false,
      "required": ["require_task_contracts", "require_result_artifacts", "escalation_policy_id"],
      "properties": {
        "require_task_contracts": { "type": "boolean" },
        "require_result_artifacts": { "type": "boolean" },
        "escalation_policy_id": { "type": "string", "minLength": 1 }
      }
    }
  }
}
