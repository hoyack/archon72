{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://archon72.local/schemas/contracts/execution_program.schema.json",
  "title": "ExecutionProgram",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "program_id",
    "created_at",
    "references",
    "ownership",
    "status",
    "tasks",
    "capacity_snapshot",
    "blockers",
    "events_ref"
  ],
  "properties": {
    "schema_version": { "type": "string", "const": "1.0" },
    "program_id": { "type": "string", "pattern": "^program-[a-zA-Z0-9\\-]+$" },
    "created_at": { "type": "string", "minLength": 1 },

    "references": {
      "type": "object",
      "additionalProperties": false,
      "required": ["handoff_id", "award_id", "rfp_id", "mandate_id"],
      "properties": {
        "handoff_id": { "type": "string", "pattern": "^handoff-[a-zA-Z0-9\\-]+$" },
        "award_id": { "type": "string", "pattern": "^award-[a-zA-Z0-9\\-]+$" },
        "rfp_id": { "type": "string", "pattern": "^rfp-[a-zA-Z0-9\\-]+$" },
        "mandate_id": { "type": "string", "pattern": "^mandate-[a-zA-Z0-9\\-]+$" }
      }
    },

    "ownership": {
      "type": "object",
      "additionalProperties": false,
      "required": ["duke_id", "supervising_earl_id", "routing_basis"],
      "properties": {
        "duke_id": { "type": "string", "minLength": 1 },
        "supervising_earl_id": { "type": "string", "minLength": 1 },
        "routing_basis": {
          "type": "object",
          "additionalProperties": false,
          "required": ["routing_table_version", "matched_portfolio"],
          "properties": {
            "routing_table_version": { "type": "string", "minLength": 1 },
            "matched_portfolio": { "type": "string", "minLength": 1 }
          }
        }
      }
    },

    "status": {
      "type": "string",
      "enum": ["ACTIVE", "COMPLETED", "BLOCKED", "CANCELLED"]
    },

    "tasks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "task_id",
          "title",
          "intent",
          "required_capabilities",
          "acceptance_criteria",
          "constraints",
          "activation"
        ],
        "properties": {
          "task_id": { "type": "string", "pattern": "^task-[a-zA-Z0-9\\-]+$" },
          "title": { "type": "string", "minLength": 1 },
          "intent": { "type": "string" },
          "required_capabilities": {
            "type": "array",
            "items": { "type": "string", "minLength": 1 }
          },
          "acceptance_criteria": {
            "type": "array",
            "items": { "type": "string" }
          },
          "constraints": {
            "type": "array",
            "items": { "type": "string" }
          },
          "activation": {
            "type": "object",
            "additionalProperties": false,
            "required": ["earl_id", "target_tool_class", "eligible_tools", "priority"],
            "properties": {
              "earl_id": { "type": "string", "minLength": 1 },
              "target_tool_class": {
                "type": "string",
                "enum": ["HUMAN_CLUSTER", "DIGITAL_TOOL"]
              },
              "eligible_tools": {
                "type": "array",
                "minItems": 1,
                "items": { "type": "string", "minLength": 1 }
              },
              "priority": {
                "type": "string",
                "enum": ["LOW", "NORMAL", "HIGH", "CRITICAL"]
              }
            }
          }
        }
      }
    },

    "capacity_snapshot": {
      "type": "object",
      "additionalProperties": false,
      "required": ["captured_at", "assumptions", "declared_constraints"],
      "properties": {
        "captured_at": { "type": "string", "minLength": 1 },
        "assumptions": { "type": "array", "items": { "type": "string" } },
        "declared_constraints": { "type": "array", "items": { "type": "string" } }
      }
    },

    "blockers": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["type", "description", "severity"],
        "properties": {
          "type": { "type": "string", "minLength": 1 },
          "description": { "type": "string", "minLength": 1 },
          "severity": { "type": "string", "enum": ["MINOR", "MAJOR", "SEVERE"] }
        }
      }
    },

    "events_ref": { "type": "string", "minLength": 1 }
  }
}
