{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://archon72.local/schemas/contracts/task_activation_request.schema.json",
  "title": "TaskActivationRequest",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "tar_id", "created_at", "references", "requester", "task", "targeting", "response_requirements"],
  "properties": {
    "schema_version": { "type": "string", "const": "1.0" },
    "tar_id": { "type": "string", "pattern": "^tar-[a-zA-Z0-9\\-]+$" },
    "created_at": { "type": "string", "format": "date-time" },

    "references": {
      "type": "object",
      "additionalProperties": false,
      "required": ["program_id", "task_id", "award_id", "mandate_id"],
      "properties": {
        "program_id": { "type": "string", "pattern": "^program-[a-zA-Z0-9\\-]+$" },
        "task_id": { "type": "string", "pattern": "^task-[a-zA-Z0-9\\-]+$" },
        "award_id": { "type": "string", "pattern": "^award-[a-zA-Z0-9\\-]+$" },
        "mandate_id": { "type": "string", "pattern": "^mandate-[a-zA-Z0-9\\-]+$" }
      }
    },

    "requester": {
      "type": "object",
      "additionalProperties": false,
      "required": ["earl_id", "duke_id"],
      "properties": {
        "earl_id": { "type": "string", "minLength": 1 },
        "duke_id": { "type": "string", "minLength": 1 }
      }
    },

    "task": {
      "type": "object",
      "additionalProperties": false,
      "required": ["title", "summary", "constraints", "inputs", "deliverables", "success_definition", "timebox"],
      "properties": {
        "title": { "type": "string", "minLength": 1 },
        "summary": { "type": "string", "minLength": 1 },
        "constraints": { "type": "array", "items": { "type": "string" } },
        "inputs": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["name", "type", "ref"],
            "properties": {
              "name": { "type": "string", "minLength": 1 },
              "type": { "type": "string", "minLength": 1 },
              "ref": { "type": "string", "minLength": 1 }
            }
          }
        },
        "deliverables": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["id", "title", "acceptance_criteria"],
            "properties": {
              "id": { "type": "string", "minLength": 1 },
              "title": { "type": "string", "minLength": 1 },
              "acceptance_criteria": { "type": "array", "minItems": 1, "items": { "type": "string", "minLength": 1 } }
            }
          }
        },
        "success_definition": { "type": "string", "minLength": 1 },
        "timebox": {
          "type": "object",
          "additionalProperties": false,
          "required": ["hours"],
          "properties": { "hours": { "type": "integer", "minimum": 1, "maximum": 720 } }
        }
      }
    },

    "targeting": {
      "type": "object",
      "additionalProperties": false,
      "required": ["tool_class", "eligible_tools"],
      "properties": {
        "tool_class": { "type": "string", "enum": ["HUMAN_CLUSTER", "DIGITAL_TOOL"] },
        "eligible_tools": { "type": "array", "minItems": 1, "items": { "type": "string", "minLength": 1 } },
        "preferred_tool": { "type": "string" }
      }
    },

    "response_requirements": {
      "type": "object",
      "additionalProperties": false,
      "required": ["must_respond", "response_deadline_iso", "allowed_responses"],
      "properties": {
        "must_respond": { "type": "boolean" },
        "response_deadline_iso": { "type": "string", "format": "date-time" },
        "allowed_responses": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "enum": ["ACCEPT", "DECLINE", "CLARIFY"] }
        }
      }
    }
  }
}
